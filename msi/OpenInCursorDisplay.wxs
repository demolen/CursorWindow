<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*"
           Name="OpenInCursorDisplay"
           Language="1033"
           Version="1.0.0"
           Manufacturer="OpenInCursorDisplay"
           UpgradeCode="E8C8DCC2-3B8F-4F32-9C3B-2F0E9B8D5DE4">

    <Package InstallerVersion="500" Compressed="yes" InstallScope="perMachine" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" CompressionLevel="high" />

    <!-- Icon for Add/Remove Programs -->
    <Icon Id="AppIcon" SourceFile="..\app.ico" />
    <Property Id="ARPPRODUCTICON" Value="AppIcon" />

    <Feature Id="MainFeature" Title="OpenInCursorDisplay" Level="1">
      <ComponentRef Id="cmpMainExe" />
      <ComponentRef Id="cmpStartMenuShortcut" />
      <ComponentRef Id="cmpStartupRun" />
    </Feature>

    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="INSTALLDIR" Name="OpenInCursorDisplay">
          <Component Id="cmpMainExe" Guid="*">
            <File Id="filExe" Source="..\open_in_cursor_display.exe" KeyPath="yes" Checksum="yes" />
          </Component>
        </Directory>
      </Directory>

      <Directory Id="ProgramMenuFolder">
        <Directory Id="AppProgramMenuDir" Name="OpenInCursorDisplay" />
      </Directory>
    </Directory>

    <DirectoryRef Id="AppProgramMenuDir">
      <Component Id="cmpStartMenuShortcut" Guid="*">
        <Shortcut Id="StartMenuShortcut"
                  Name="OpenInCursorDisplay"
                  Description="OpenInCursorDisplay"
                  Target="[INSTALLDIR]open_in_cursor_display.exe"
                  WorkingDirectory="INSTALLDIR"
                  Icon="AppIcon" />
        <RemoveFolder Id="RemoveShortcutDir" Directory="AppProgramMenuDir" On="uninstall" />
        <!-- Dummy registry key path to anchor the shortcut component -->
        <RegistryValue Root="HKCU" Key="Software\OpenInCursorDisplay" Name="Installed" Type="integer" Value="1" KeyPath="yes" />
      </Component>
    </DirectoryRef>

    <DirectoryRef Id="INSTALLDIR">
      <!-- Per-user startup (current user). Default is installed, app can toggle later. -->
      <Component Id="cmpStartupRun" Guid="*">
        <RegistryValue Root="HKCU"
                       Key="Software\Microsoft\Windows\CurrentVersion\Run"
                       Name="OpenInCursorDisplay"
                       Type="string"
                       Value="&quot;[INSTALLDIR]open_in_cursor_display.exe&quot;"
                       KeyPath="yes" />
      </Component>
    </DirectoryRef>

    <!-- Minimal UI -->
    <UIRef Id="WixUI_Minimal" />
  </Product>
</Wix>
